@page "/problems"

<PageTitle>Problems</PageTitle>
<div class="row" style="margin-bottom: 1rem">
    <div class="col-12 col-md-6">
        <RadzenText Text="Problems" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
    </div>
    <div class="col-12 col-md-6 justify-content-start justify-content-md-end" style="display: flex; align-items: center; flex-wrap: wrap; gap: 0.5rem">
    <RadzenButton Icon="add_circle_outline" style="margin-bottom: 10px" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"  AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true"
            Data="@problems"    TItem="EpmDashboard.Models.EPM.Problem" RowSelect="@EditRow" >
            <Columns>
                <RadzenDataGridColumn TItem="EpmDashboard.Models.EPM.Problem" Property="id" Title="id">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EpmDashboard.Models.EPM.Problem" Property="title" Title="title">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EpmDashboard.Models.EPM.Problem" Property="description" Title="description">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EpmDashboard.Models.EPM.Problem" Property="createtime" Title="createtime">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EpmDashboard.Models.EPM.Problem" Property="updatetime" Title="updatetime">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EpmDashboard.Models.EPM.Problem" Property="funding" Title="funding">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EpmDashboard.Models.EPM.Problem" Property="ProblemMaker.phone" Title="ProblemMaker">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EpmDashboard.Models.EPM.Problem" Property="ProblemSolver.name" Title="ProblemSolver">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EpmDashboard.Models.EPM.Problem" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="problem">
                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, problem)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>
        </RadzenDataGrid>
    </div>
</div>
